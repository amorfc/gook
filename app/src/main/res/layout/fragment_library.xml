<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentLibraryModel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".librarymodel_fragment">

    <!-- buyuk yazı -->


    <!-- kucuk yazı -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstrainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_alignParantBottom="true"
            android:alpha="0.2"
            android:background="@drawable/round_corner_top"
            app:layout_constraintBottom_toBottomOf="@id/ImageLeftSıde"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@id/ImageLeftSıde"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ImageLeftSıde" />

        <ImageView
            android:id="@+id/ImageLeftSıde"
            android:layout_width="85dp"
            android:layout_height="69dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="180dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="51dp"
            android:contentDescription="@string/todo"
            app:layout_constraintEnd_toStartOf="@+id/littleTextViewID"
            app:layout_constraintHorizontal_bias="0.294"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/titleViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="200dp"
            android:layout_marginStart="2dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:textColor="#132656"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.205"
            app:layout_constraintStart_toEndOf="@+id/ImageLeftSıde"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="The Subtle Art of Not Giving a F*ck" />

        <TextView
            android:id="@+id/littleTextViewID"
            android:layout_width="247dp"
            android:layout_height="10dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:text="@string/littleText"
            android:textAlignment="center"
            android:textColor="#b3000000"
            android:textSize="4dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/ImageLeftSıde"
            app:layout_constraintEnd_toEndOf="@+id/titleViewID"
            app:layout_constraintHorizontal_bias="0.258"
            app:layout_constraintStart_toStartOf="@+id/titleViewID"
            app:layout_constraintTop_toBottomOf="@+id/titleViewID"
            app:layout_constraintVertical_bias="0.0"
            tools:text="In this generation-defining self-help guide, a superstar blogger cuts through the crap to show us how to stop
    trying to be &quot;positive&quot; all the time" />


        <TextView
            android:id="@+id/HeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/work_sans_semibold"
            android:textColor="#04b3fd"
            android:textSize="25sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Library" />

        <TextView
            android:id="@+id/yuzdeRıghtSide"
            android:layout_width="38dp"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#43A047"
            android:fontFamily="@font/poppins_light"
            android:lineSpacingExtra="6dp"
            android:textColor="#00a006"
            android:textSize="17dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/littleTextViewID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/titleViewID"
            app:layout_constraintTop_toTopOf="@+id/titleViewID"
            tools:text="75%" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="336dp"
            android:background="?android:attr/windowBackground"
            app:itemIconSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ImageRight"
            app:layout_constraintVertical_bias="0.0"
            app:menu="@menu/bottom_navigation" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>